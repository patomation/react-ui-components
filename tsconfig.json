{
  "extends": "tsconfigs/browser-executable",
  "compilerOptions": {
    "strictFunctionTypes": false,
    "module": "commonjs",
    "target": "es6", 
    "jsx": "react",
    "strict": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "lib",
    "sourceMap": true,
    "types": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts",  "**/*.d.ts"]
}